<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tttt"
        tools:context="com.dverybest.fun.SplashScreenActivity">
    <ImageView
        android:layout_width="125dp"
      android:layout_above="@id/n"
        android:layout_centerInParent="true"
        android:src="@drawable/img1"
        android:background="@drawable/roundedbutton"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/n"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="1dp" />
<LinearLayout
    android:layout_width="match_parent"
   android:layout_below="@id/n"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/logo"
    android:layout_height="wrap_content">

    <TextView
        android:text="DveryBest's "
        android:layout_width="wrap_content"
        android:textSize="27sp"
        android:textStyle="bold"

        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUISINE"
        android:fontFamily="cursive"
        android:textColor="#ffffc600"
        android:textSize="40sp"
        android:textStyle="bold" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="fresh. fast. tasty"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/logo"
        android:id="@+id/text3"
        android:fontFamily="casual"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />
    </RelativeLayout>